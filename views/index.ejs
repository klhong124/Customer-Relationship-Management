<!DOCTYPE html>
<html lang="en">
<head>
<% include partials/head %> 
</head>
<body>
<script>
  $(document).ready(function(){
      $('#home').addClass('active');
      $('#customer_table').DataTable({
      ajax: {
        url: 'data/customer',
        dataSrc: 'allCustomers'
      },
      columns: [
        { data: "_id" },
        { data: "name" },
        { data: "company" },
        { data: "gender" },
        { data: "email" },
        { data: "phone" }
      ]
    });
  });
</script>
<%if (login) { %>
  <% include partials/menu-login %>
<% } else { %>
  <% include partials/menu %>
<% } %>
  <div class="container-fluid text-center">
    <%if (login) { %>
      <h3>Welcome, <%=user.name%></h3><br>
    <% } else { %>
      <h3>Welcome to CRM</h3>
    <% } %>
  </div>
  <div class="container text-center">  
  <%if (login) { %>
  <table id="customer_table" class="display">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Company</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone</th>
          </tr>
        </thead>
  </table>
  <% } else { %>
    <p>CRM is Customer Relationship Management System, Help you to Management your Relationship with Customer.</p>
  <% } %>
</div>
</body>
<% include partials/script %>
</html>